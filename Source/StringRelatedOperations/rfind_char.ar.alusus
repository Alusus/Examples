اشمل "مـتم/نـص"؛

استخدم مـتم؛


دالة جد_المحرف_عكسيا(س: سند[نـص]، م: مـحرف): صـحيح {
	عرف دليل: صـحيح؛
	لكل دليل = س.هات_الطول() - 1 ، دليل != 0 ، دليل-- {
		إذا س(دليل) == م {
			ارجع دليل؛
		}
	}
	ارجع -1؛
}


دالة رئيسي() {
	عرف س: نـص = "abccde1324"؛
	طـرفية.اطبع("%d\ج"، جد_المحرف_عكسيا(س، 'c'))؛
	طـرفية.اطبع("%d\ج"، جد_المحرف_عكسيا(س، '0'))؛
}

رئيسي()؛
