اشمل "مـتم/نـص"؛

استخدم مـتم؛


دالة جد_المحرف(س: سند[نـص]، م: مـحرف): صـحيح {
	عرف دليل: صـحيح؛
	لكل دليل = 0 ، دليل < س.هات_الطول() ، دليل++ {
		إذا س(دليل) == م {
			ارجع دليل؛
		}
	}
	ارجع -1؛
}


دالة رئيسي() {
	عرف س: نـص = "abcde1324"؛
	طـرفية.اطبع("%d\ج"، جد_المحرف(س، 'c'))؛
	طـرفية.اطبع("%d\ج"، جد_المحرف(س، '0'))؛
}

رئيسي()؛
