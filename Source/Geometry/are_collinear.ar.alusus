اشمل "مـتم/طـرفية"؛

استخدم مـتم؛


صنف نـقطة {
	عرف س: صـحيح؛
	عرف ص: صـحيح؛
}

دالة على_خط_مستقيم(ن1: نـقطة، ن2: نـقطة، ن3: نـقطة): ثـنائي {
	ارجع (ن2.ص - ن1.ص) * (ن3.س - ن1.ص) == (ن3.ص - ن1.ص) * (ن2.س - ن1.س)؛
}


دالة رئيسي() {
	عرف ن1: نـقطة؛
	ن1.س = 0؛
	ن1.ص = 0؛
	عرف ن2: نـقطة؛
	ن2.س = 1؛
	ن2.ص = 1؛
	عرف ن3: نـقطة؛
	ن3.س = 2؛
	ن3.ص = 2؛
	
	إذا على_خط_مستقيم(ن1، ن2، ن3) {
		طـرفية.اطبع("النقاط على خط مستقيم\ج")؛
	}
	وإلا {
		طـرفية.اطبع("النقاط ليست على خط مستقيم\ج")؛
	}
}

رئيسي()؛
