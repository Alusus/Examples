اشمل "مـتم/مـصفوفة"؛

استخدم مـتم؛


دالة الترتيب_بالاختيار(م: سند[مـصفوفة[صـحيح]]) {
	عرف دليل1: صـحيح؛
	عرف دليل2: صـحيح؛
	عرف مؤقت: صـحيح؛
	عرف أصغر_دليل: صـحيح؛
	
	لكل دليل1 = 0 ، دليل1 < م.هات_الطول() - 1 ، دليل1++ {
		أصغر_دليل = دليل1؛
		
		لكل دليل2 = دليل1 + 1 ، دليل2 < م.هات_الطول() ، دليل2++ {
			إذا م(دليل2) < م(أصغر_دليل) {
				أصغر_دليل = دليل2؛
			}
		}
		
		مؤقت = م(أصغر_دليل)؛
		م(أصغر_دليل) = م(دليل1)؛
		م(دليل1) = مؤقت؛
	}
}
