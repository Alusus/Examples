دالة ألحق_سجل(مسار_الملف: سند[نـص]، سجل: سند[نـص]) {
	عرف ملف: مؤشر[نـم.مـلف] = نـم.افتح_ملف(مسار_الملف، "a")؛
	
	نـم.اكتب(سجل.صوان، 1، سجل.هات_الطول()، ملف)؛
	نـم.اكتب("\ج"، 1، 1، ملف)؛
	نـم.اغلق_ملف(ملف)؛
}

