اشمل "مـتم/طـرفية"؛

استخدم مـتم؛


دالة اقتطع(م: سند[مـصفوفة[صـحيح]]، أدنى: صـحيح، أعلى: صـحيح) {
	عرف دليل: صـحيح؛
	لكل دليل = 0 ، دليل < م.هات_الطول() ، دليل++ {
		إذا م(دليل) < أدنى {
			م(دليل) = أدنى؛
		}
		وإلا إذا م(دليل) > أعلى {
			م(دليل) = أعلى؛
		}
	}
}

دالة رئيسي() {
	عرف م: مـصفوفة[صـحيح]({1, -1, 7, 4, 5, 6, 7, 8, 9})؛
	
	اقتطع(م، 0، 5)؛
	
	عرف دليل: صـحيح؛
	لكل دليل = 0 ، دليل < م.هات_الطول() ، دليل++ {
		طـرفية.اطبع("%d "، م(دليل))؛
	}	
}

رئيسي()؛
